<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="p_userunit">

		<class>com.cg.petsupply.model.CustomerOrder</class>
		<class>com.cg.petsupply.model.OrderItems</class>
		<class>com.cg.petsupply.model.User</class>
		<class>com.cg.petsupply.model.Category</class>
		<class>com.cg.petsupply.model.Product</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
		</properties>
	</persistence-unit>

</persistence>
    